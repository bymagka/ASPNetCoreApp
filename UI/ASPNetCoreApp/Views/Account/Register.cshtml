@using ASPNetCoreApp.Controllers;
@using Microsoft.Extensions.Logging;

@model ASPNetCoreApp.Domain.ViewModels.UserIdentityViewModel

@{
    ViewData["Title"] = "Register";
}

@inject ILogger<EmployeesController> Logger

@{ 
    Logger.LogInformation("Rendering the registration form");
}
<div class="container">
    <div class="col-sm-4">
        <div class="signup-form">
            <!--sign up form-->
            <h2>Регистрация нового пользователя</h2>
            <form asp-action="Register" asp-antiforgery="true">
                <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
                <input asp-for="Login" placeholder="Логин" />

                <span asp-validation-for="Login" class="text-danger"></span>

                <input asp-for="Password" placeholder="Пароль" />
                <span asp-validation-for="Password" class="text-danger"></span>

                <input asp-for="PasswordConfirmed" placeholder="Подтверждение пароля" />
                <span asp-validation-for="PasswordConfirmed" class="text-danger"></span>

                <button type="submit" class="btn btn-default">Зарегистрироваться</button>

            </form>
        </div><!--/sign up form-->
    </div>
</div>

