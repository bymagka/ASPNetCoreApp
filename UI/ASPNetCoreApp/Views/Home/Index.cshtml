@using ASPNetCoreApp.Interfaces.Services
@using ASPNetCoreApp.Services.Mappers 

@inject IProductData ProductData

@{ 
    ViewBag.Title= "Index";
}


<partial name="Partial/_Slider" />

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <partial name="Partial/_LeftSideBar" />
            </div>

            <div class="col-sm-9 padding-right">
                <partial name="Partial/_FeaturedItems" model="ProductData.GetProducts().Products.Take(6).ToView()" />
                <partial name="Partial/_CategoryTab" />
                <partial name="Partial/_RecommendedItems" />
            </div>
        </div>
    </div>
</section>
