@model IEnumerable<ASPNetCoreApp.Domain.ViewModels.ProductViewModel>

@{ 
    ViewBag.Title = "Управление каталогом товаров";
}

<div id="page-wrapper">
    <div id="page-inner">
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>@Html.DisplayNameFor(m => m.Id)</th>
                <th>@Html.DisplayNameFor(m => m.Name)</th>
                <th>@Html.DisplayNameFor(m => m.Brand)</th>
                <th>@Html.DisplayNameFor(m => m.Section)</th>
                <th>@Html.DisplayNameFor(m => m.ImageUrl)</th>
                <th>@Html.DisplayNameFor(m => m.Price)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

            <tr>
                <td>
                    <a asp-action="Index"><i class="glyphicon glyphicon-edit"></i>ред. </a>
                </td>
                <td>
                    @Html.DisplayFor(_ => item.Id)
                </td>

                <td>@Html.DisplayFor(_ => item.Name)</td>
                <td>@Html.DisplayFor(_ => item.Brand)</td>
                <td>@Html.DisplayFor(_ => item.Section)</td>
                <td>@Html.DisplayFor(_ => item.Price)</td>
                <td>
                    <img src="~/images/shop/@item.ImageUrl" />

                </td>
                <td>
                    <a asp-action="Index"><i class="glyphicon glyphicon-remove"></i>уд. </a>
                </td>
            </tr>
            }

        </tbody>
    </table>
    </div>
</div>