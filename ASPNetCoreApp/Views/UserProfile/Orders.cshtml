@model IEnumerable<UserOrderViewModel> 

@{ 
    ViewBag.Title = "Заказы пользователя";
    Layout = "_UserProfileLayout";
}

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <td>#</td>
                <td>Дата</td>
                <td>Адрес</td>
                <td>Телефон</td>
                <td>Сумма</td>
                <td>Описание</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.Date.ToString("dd.MM.yy HH:mm")</td>
                <td>@item.Address</td>
                <td>@item.Phone</td>
                <td>@item.TotalPrice</td>
                <td>@item.Description</td>
            </tr>         
            }
        </tbody>
    </table>
</div>