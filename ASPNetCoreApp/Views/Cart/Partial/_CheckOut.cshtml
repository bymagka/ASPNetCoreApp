@model OrderViewModel

<form asp-action="Checkout" asp-antiforgery="true">

    <div class="row">
        <div class="col-sm-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Phone" class="sr-only"></label>
                    <input asp-for="Phone" placeholder="Телефон" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Adress" class="sr-only"></label>
                    <input asp-for="Adress" placeholder="Адрес" class="form-control" />
                    <span asp-validation-for="Adress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="sr-only"></label>
                    <input asp-for="Description" placeholder="Описание" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>           
        </div>
        <div class="col-sm-6">
            @{
                ViewData.TryGetValue("TotalPrice", out var totalPrice);
            }
            @if (totalPrice is decimal and > 0)
            {
                <div class="total_area">
                    <ul>
                        <li>Итого <span>@ViewBag.TotalPrice</span></li>
                    </ul>
                    <a class="btn btn-default update" href="">Обновить</a>
                    <input class="btn btn-default check_out" type="submit" value="Оформить заказ" />
                </div>
            }
        </div>
    </div>

</form>